# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration (optional - these are usually set by Firebase automatically)
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_DATABASE_URL=https://your_project_id.firebaseio.com

# Resend Email Configuration
RESEND_API_KEY=re_your_resend_api_key_here

# Email Configuration
# Development: Uses @resend.dev domain (only sends to your registered Resend email)
# Production: Uses your verified custom domain
EMAIL_FROM_NAME=CaloriTrack
EMAIL_FROM_ADDRESS_DEV=onboarding@resend.dev
EMAIL_FROM_ADDRESS_PROD=noreply@yourdomain.com

# Environment: development | production
NODE_ENV=development
